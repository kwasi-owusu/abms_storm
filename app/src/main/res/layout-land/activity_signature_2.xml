<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">


            <LinearLayout
                android:id="@+id/linearBack"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical|left">

                <ImageView
                        android:id="@+id/ivBack"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back"/>
            </LinearLayout>





            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/colorBlack"
                android:text="@string/title_please_sign"
                android:fontFamily="@font/muli"
                />


            <LinearLayout
                android:id="@+id/linearSearch"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <!--<ImageView style="@style/imageViewSmall"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:src="@drawable/settings"/>-->
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_15"
                android:background="@drawable/bg_rect_green_border">


                <LinearLayout
                    android:id="@+id/linearCanvas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:gravity="center">

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <Button
                        android:id="@+id/btnRetake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_40"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ripple_theme"
                        android:textAllCaps="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/lbl_retake"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/questrial"
                        android:textStyle="bold" />


                <Button
                        android:id="@+id/btnDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_40"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ripple_theme"
                        android:textAllCaps="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/lbl_done"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/questrial"
                        android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>