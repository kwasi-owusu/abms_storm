<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/homeToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/homeToolbarNavigationButtonStyle</item>
    </style>

    <style name="InputLayout" parent="AppTheme.NoActionBar">
        <!--        Theme.AppCompat.NoActionBar-->
        <!--        <item name="android:textSize">@dimen/text_size_medium</item>-->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/text_color_gray_dark</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/red</item>
        <!--<item name="android:fontFamily">@font/roboto_regular</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <!-- 16dp padding on both sides of actionbar -->
        <item name="android:paddingRight">-12dp</item>
        <item name="android:paddingLeft">-12dp</item>
    </style>


    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <!--<item name="android:minWidth">0dp</item>-->
        <item name="android:padding">-12dp</item>
        <!--<item name="android:paddingLeft">16dp</item>-->
        <item name="android:maxHeight">22dp</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:scaleType">centerInside</item>
        <!--<item name="android:height">18dp</item>-->
        <!--<item name="android:width">18dp</item>-->
    </style>

    <!--<style name="ActionButton" parent="@android:style/Widget.ActionButton">-->
    <!--<item name="android:maxWidth">24dp</item>-->
    <!--<item name="android:minWidth">24dp</item>-->
    <!--&lt;!&ndash;<item name="android:paddingRight">2dp</item>&ndash;&gt;-->
    <!--<item name="android:paddingLeft">2dp</item>-->
    <!--&lt;!&ndash;<item name="android:layout_marginRight">2dip</item>&ndash;&gt;-->
    <!--&lt;!&ndash;<item name="android:layout_marginLeft">2dip</item>&ndash;&gt;-->
    <!--</style>-->

    <style name="homeToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="contentInsetLeft">12dp</item>
        <item name="contentInsetStart">12dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="homeToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/trans</item>
        <!--<item name="android:statusBarColor">@color/transparent</item>-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_up_animation</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppThemeActionBar1" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="ServicesInputLayout">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:background">@drawable/services_edittext_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="SheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
