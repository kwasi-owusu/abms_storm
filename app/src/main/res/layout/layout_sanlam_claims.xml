<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <!--    xmlns:app="http://schemas.android.com/tools"-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/questrial"
                android:padding="@dimen/margin_10"
                android:text="CLAIMS"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/situationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_rounded"
                android:layout_marginTop="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnClaim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:prompt="@string/hint_choose_claim"
                    android:spinnerMode="dropdown"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/questrial"
                android:text="Enter Phone Number"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_15sp" />
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_rounded"
                android:fontFamily="@font/questrial"
                android:inputType="number"
                android:nextFocusDown="@id/date"
                android:textAllCaps="true"
                android:maxLength="10"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/questrial"
                android:text="Choose date"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_15sp" />
            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_rounded"
                android:fontFamily="@font/questrial"
                android:inputType="date"
                android:nextFocusDown="@id/contactNumber"
                android:focusableInTouchMode="false"
                android:textAllCaps="true"
                android:maxLength="40"
                android:padding="@dimen/margin_10"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/questrial"
                android:text="Please do you have death certificate for the deceased Person?"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_15sp" />

            <RadioGroup
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="No" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/causeOfDeath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_rounded"
                android:layout_marginTop="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnCauseOfDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:prompt="@string/hint_choose_cause_of_death"
                    android:spinnerMode="dropdown"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="30sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/questrial"
                android:minHeight="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_30"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>