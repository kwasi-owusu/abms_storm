<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite" android:tag="layout/layout_qr_registration_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo_black">

                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content"-->
                    <requestFocus />
                </ImageView>


                <ImageView
                    android:id="@+id/ivQRCode"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/st_logo" />

                <!--<TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@string/lbl_store_manager"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/kirkwall_regular"
                        android:textStyle="italic|bold"
                        android:textSize="25sp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/questrial"
                        android:padding="8dp"
                        android:text="QR REGISTRATION"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColorHint="@color/colorBlack"
                        android:theme="@style/InputLayout">
                        <!--                android:textColorHint="@color/text_color_gray_dark"-->

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/questrial"
                            android:hint="BUSINESS NAME"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="60"
                            android:nextFocusDown="@id/etAddress"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/lightGray"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColorHint="@color/colorBlack"
                        android:theme="@style/InputLayout">
                        <!--                android:textColorHint="@color/text_color_gray_dark"-->

                        <EditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/questrial"
                            android:hint="BUSINESS ADDRESS"
                            android:inputType="textPostalAddress|textCapWords"
                            android:maxLength="60"
                            android:nextFocusDown="@id/etPhone"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/lightGray"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColorHint="@color/colorBlack"
                        android:theme="@style/InputLayout">
                        <!--                android:textColorHint="@color/text_color_gray_dark"-->

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/questrial"
                            android:hint="@string/hint_phone_caps"
                            android:inputType="number"
                            android:maxLength="14"
                            android:nextFocusDown="@id/etPwd"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/lightGray"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColorHint="@android:color/black"
                        android:theme="@style/InputLayout"
                        app:passwordToggleEnabled="false"
                        app:passwordToggleTint="@color/colorBlack">
                        <!--            app:passwordToggleDrawable="@drawable/password_selector"-->
                        <!--            android:layout_marginTop="5dp"-->
                        <EditText
                            android:id="@+id/etPwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:fontFamily="@font/questrial"
                            android:hint="PASSWORD"
                            android:inputType="text"
                            android:nextFocusDown="@id/etConfirmPwd"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="15sp" />
                        <!--            android:drawablePadding="5dp"-->
                        <!--                com.google.android.material.textfield.TextInputEditText-->
                        <!--                android:inputType="textPassword"-->

                        <!--<com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_user_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_pwd"
                            android:hint="   Password"
                            android:inputType="textPassword"
                            android:nextFocusDown="@id/btn_login"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:fontFamily="@font/muli_light"
                            android:textSize="20sp" />-->

                        <!--<EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_user_pwd"
                            android:drawableLeft="@drawable/ic_pwd"
                            android:hint="   Password"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:nextFocusDown="@id/btn_login"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="20sp" />-->
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputConfirmPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColorHint="@android:color/black"
                        android:theme="@style/InputLayout"
                        app:passwordToggleEnabled="false"
                        app:passwordToggleTint="@color/colorBlack">
                        <!--            app:passwordToggleDrawable="@drawable/password_selector"-->
                        <!--            android:layout_marginTop="5dp"-->

                        <EditText
                            android:id="@+id/etConfirmPwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/questrial"
                            android:hint="REPEAT PASSWORD"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:nextFocusDown="@id/etPhone"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="15sp" />
                        <!--                com.google.android.material.textfield.TextInputEditText-->
                        <!--                android:inputType="textPassword"-->

                        <!--<com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_user_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_pwd"
                            android:hint="   Password"
                            android:inputType="textPassword"
                            android:nextFocusDown="@id/btn_login"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:fontFamily="@font/muli_light"
                            android:textSize="20sp" />-->

                        <!--<EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_user_pwd"
                            android:drawableLeft="@drawable/ic_pwd"
                            android:hint="   Password"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:nextFocusDown="@id/btn_login"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="20sp" />-->
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_bg">
                        <!--<com.woleapp.ui.widgets.CustomSpinner1
                                android:id="@+id/spnBank"
                                android:prompt="@string/hint_choose_bank_caps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="15sp"
                        />-->
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spnState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/hint_select_state"
                            android:spinnerMode="dropdown"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp" />
                        <!--                android:entries="@array/banks"-->
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ripple_theme"
                        android:fontFamily="@font/questrial"
                        android:minHeight="@dimen/margin_40"
                        android:text="SUBMIT"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvNoAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/tvSignUp"
                            android:fontFamily="@font/questrial"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="@string/lbl_no_account"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:fontFamily="@font/questrial"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="@string/lbl_sign_up"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />

                        <!--                selectableItemBackground-->
                        <!--                selectableItemBackgroundBorderless-->
                    </RelativeLayout>
                </LinearLayout>


                <!--            android:background="@color/colorPrimary"-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

         