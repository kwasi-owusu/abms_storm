    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray" android:tag="layout/layout_cash_in_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/questrial"
                    android:padding="@dimen/margin_10"
                    android:text="@string/lbl_cash_in"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_40"
                android:orientation="vertical">

                <!--
                            <EditText
                                    android:id="@+id/etProductName"
                                    android:maxLength="60"
                                    android:background="@drawable/bg_rounded_white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_10"
                                    android:hint="@string/hint_product_name"
                                    android:inputType="text|textCapWords"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                    android:nextFocusDown="@id/etPrice"
                                    android:imeOptions="actionNext"
                                    android:singleLine="true"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorBlack"
                                    android:textSize="@dimen/text_size_14sp"
                                    android:fontFamily="@font/questrial"
                            />
                -->

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/questrial"
                    android:padding="@dimen/margin_5"
                    android:text="GHs 45,000"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_30"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_white"
                    android:layout_marginTop="@dimen/dimen_10dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spnBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:prompt="@string/hint_choose_bank_caps"
                        android:spinnerMode="dropdown"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_white"
                    android:layout_marginTop="@dimen/dimen_10dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spnIdType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:prompt="@string/hint_choose_id_type"
                        android:spinnerMode="dropdown"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etIDNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789"
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_id_no"
                    android:inputType="number"
                    android:maxLength="20"
                    android:nextFocusDown="@id/etPrice"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/etAccountNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789"
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_account_no"
                    android:inputType="number"
                    android:maxLength="20"
                    android:nextFocusDown="@id/etPrice"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHJIKLMNOPQRSTUVWXYZ "
                    android:enabled="true"
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_customer_name"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="40"
                    android:nextFocusDown="@id/etAccountNo"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <!--<EditText
                        android:id="@+id/etPrice"
                        android:maxLength="10"
                        android:layout_marginTop="@dimen/margin_15"
                        android:background="@drawable/bg_rounded_white"
                        android:padding="@dimen/margin_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_amount"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:digits="0123456789."
                        android:nextFocusDown="@id/etEmail"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/questrial"
                />-->

                <EditText
                    android:id="@+id/etFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789."
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_amount"
                    android:inputType="text"
                    android:maxLength="10"
                    android:nextFocusDown="@id/etEmail"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="GH₵ 100"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/etdepositor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHJIKLMNOPQRSTUVWXYZ "
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_depositor"
                    android:inputType="text"
                    android:maxLength="40"
                    android:nextFocusDown="@id/etEmail"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvConvinienceFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/questrial"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="@string/lbl_convinience_fee"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15">

                    <TextView
                        android:id="@+id/tvSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/margin_5"
                        android:fontFamily="@font/questrial"
                        android:text="@string/lbl_signature"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_14sp" />
                    <!--                android:drawableRight="@drawable/error_small"-->

                    <TextView
                        android:id="@+id/tvRetake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:drawableLeft="@drawable/reset"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/questrial"
                        android:text="RETAKE"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="bold" />


                </RelativeLayout>
                <!--<TextView
                        android:id="@+id/tvSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_signature"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/questrial"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginTop="@dimen/margin_10"
                />-->
                <LinearLayout
                    android:id="@+id/linearCanvas"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/bg_rounded_white"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_theme"
                        android:fontFamily="@font/questrial"
                        android:minHeight="@dimen/margin_40"
                        android:text="PROCEED TO ACCOUNT TRANSFER"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />
                    <!--                android:layout_marginTop="@dimen/margin_20"-->
                </LinearLayout>
                <!--            <com.llollox.androidtoggleswitch.widgets.ToggleSwitch-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:gravity="center"-->
                <!--                    app:textToggleLeft="Apple"-->
                <!--                    app:textToggleRight="Lemon" />-->


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
         