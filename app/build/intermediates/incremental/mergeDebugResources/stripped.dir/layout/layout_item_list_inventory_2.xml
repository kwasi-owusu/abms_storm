<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray" android:tag="layout/layout_item_list_inventory_2_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:layout_marginTop="@dimen/margin_5"
    >
        <androidx.cardview.widget.CardView
                android:id="@+id/cardCalendar"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                android:elevation="3dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
        >
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@color/colorPrimary">
                    <TextView
                            android:id="@+id/tvMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minEms="5"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="@dimen/margin_10"
                            android:paddingRight="@dimen/margin_10"
                            android:textColor="@color/colorWhite"
                            android:textSize="9sp"
                            android:fontFamily="@font/questrial"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="AUG"

                    />
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:background="@color/lightGray"
                              android:gravity="center">
                    <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_12sp"
                            android:fontFamily="@font/questrial"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="15"
                    />

                    <TextView
                            android:id="@+id/tvYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_margin_mini"
                            android:layout_marginBottom="@dimen/text_margin_mini"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="9sp"
                            android:fontFamily="@font/questrial"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="2019"
                            android:gravity="center"
                            android:minEms="5"
                    />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
                android:id="@+id/tvName"
                android:layout_toRightOf="@id/cardCalendar"
                android:layout_toLeftOf="@id/btnDetails"
                android:layout_centerVertical="false"
                android:gravity="left"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_10"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_12sp"
                android:fontFamily="@font/questrial"
                android:textStyle="bold"
                android:text="dasdasdas d das das das dasda das das da da dasdasd das das das das das d"
        />
        <!--@{inventory.product_name}-->

        <!--android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"-->

        <!--android:layout_alignParentLeft="true"-->
        <Button
                android:id="@+id/btnDetails"
                android:tag="binding_1"                                                            
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/text_margin_mini"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/text_margin_mini"
                android:minHeight="@dimen/margin_40"
                android:background="@drawable/ripple_theme_no_radius"
                android:textAllCaps="true"
                android:text="DETAILS"
                android:textSize="@dimen/text_size_11sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/questrial"
                android:textStyle="bold" />
        <!--android:drawableRight="@drawable/arrow_down_bigger"-->

        <!--android:drawablePadding="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_5"-->
    </RelativeLayout>


