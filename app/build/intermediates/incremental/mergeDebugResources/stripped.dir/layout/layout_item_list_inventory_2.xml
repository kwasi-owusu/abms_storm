        <TextView
                android:id="@+id/tvQuantity"
                android:layout_below="@id/tvCategory"
                android:layout_marginTop="@dimen/padding_8"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_10"
