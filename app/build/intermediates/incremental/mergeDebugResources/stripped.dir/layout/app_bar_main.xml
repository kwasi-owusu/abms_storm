<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:animateLayoutChanges="true"
        tools:context=".ui.activity.MainActivity" android:tag="layout/app_bar_main_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/main_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/red"
                android:contentInsetStartWithNavigation="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_toLeftOf="@+id/ivLogo"
                        android:ellipsize="end"
                        android:fontFamily="@font/questrial"
                        android:maxLines="2"
                        android:text="Welcome"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvLedgerBalanceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/questrial"
                        android:text="Ledger Balance"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_13sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/tvLedgerBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLedgerBalanceTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:fontFamily="@font/questrial"
                        android:text="@string/hint_product_price"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvAvailableBalanceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLedgerBalance"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/questrial"
                        android:text="Available Balance"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_13sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/tvAvailableBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAvailableBalanceTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:fontFamily="@font/questrial"
                        android:text="@string/hint_product_price"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <ImageButton
                        android:id="@+id/refresh_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@id/tvLedgerBalanceTitle"
                        android:layout_toEndOf="@id/tvAvailableBalanceTitle"
                        android:background="?attr/selectableItemBackground"
                        app:srcCompat="@drawable/ic_refresh" />
