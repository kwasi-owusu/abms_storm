    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_login"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/questrial"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_20"
            android:text="@string/lbl_verification"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/questrial"
            android:text="@string/lbl_verification_code_sent"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_8"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/questrial"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvSeparator"
                    android:visibility="gone"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:textColor="@color/colorPrimary"
                    android:text="AND"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"/>

            <TextView
                    android:id="@+id/tv_mobile_no"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:fontFamily="@font/questrial"
                    android:text="6546464asdasd64"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />
<!--            <ImageView-->
<!--                android:visibility="visible"-->
<!--                android:id="@+id/et_change_number"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="@dimen/margin_5"-->
<!--                android:tint="@color/colorPrimary"-->
<!--                android:src="@drawable/edit_menu" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/colorWhite">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:fontFamily="@font/questrial"
                        android:id="@+id/et_Otp_1"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@id/et_Otp_2"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:inputType="number"
                        android:gravity="center"
                        android:singleLine="true"
                        android:focusable="true"
                        android:maxLength="1"
                        android:background="@drawable/bg_rounded_theme_border"
                        android:digits="0123456789"
                       >
                        <!--android:background="@drawable/edittext_bg_light"-->
                        <requestFocus ></requestFocus>
                    </EditText>

                    <EditText
                        android:fontFamily="@font/questrial"
                        android:id="@+id/et_Otp_2"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@id/et_Otp_3"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_theme_border"
                        android:layout_margin="@dimen/margin_10"
                        android:digits="0123456789"
                        />
                    <!--android:background="@drawable/edittext_bg_light"-->
                    <EditText
                        android:fontFamily="@font/questrial"
                        android:id="@+id/et_Otp_3"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@id/et_Otp_4"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:singleLine="true"
                        android:background="@drawable/bg_rounded_theme_border"
                        android:inputType="number"
                        android:maxLength="1"
                        android:gravity="center"
                        android:digits="0123456789"
                        />
                    <!--android:background="@drawable/edittext_bg_light"-->
                    <EditText
                        android:fontFamily="@font/questrial"
                        android:id="@+id/et_Otp_4"
                        android:imeOptions="actionDone"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:layout_margin="@dimen/margin_10"
                        android:singleLine="true"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_theme_border"
                        android:maxLength="1"
                        android:digits="0123456789"
                       />
                    <!--android:background="@drawable/edittext_bg_light"-->
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="center|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:gravity="center">

            <ImageView
                    android:id="@+id/ivTimer"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/timer" />

            <!--<Chronometer
                    android:id="@+id/chronometer"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:format="MM:SS"
                    android:fontFamily="@font/questrial"
                    android:countDown="true"/>-->
            <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/questrial"
                    android:textColor="@color/colorBlack"
                    android:text="0:30"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/padding_8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearResend"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_otp"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5"
                android:fontFamily="@font/questrial"
                android:text="@string/lbl_verification_code_not_received"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_resend"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/questrial"
                android:textColor="@color/colorPrimary"
                android:text="@string/lbl_resend"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_5" />
        </LinearLayout>

            <Button
                    android:id="@+id/btnVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/ripple_theme"
                    android:imeOptions="actionDone"
                    android:minHeight="@dimen/margin_40"
                    android:textAllCaps="true"
                    android:text="Verify"
                    android:textSize="@dimen/text_size_15sp"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/muli"
                    android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>

    </LinearLayout>


        <!--<Button
            android:layout_margin="@dimen/margin_20"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/questrial"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_16sp"
            android:background="@drawable/rounded_bottom_button_agent"/>-->

        <Button
                android:id="@+id/btn_continue"
                android:layout_alignParentBottom="true"
                android:minHeight="@dimen/margin_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/ripple_theme"
                android:imeOptions="actionDone"
                android:textAllCaps="true"
                android:text="@string/lbl_verification"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/questrial"
                android:textStyle="bold" />

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/margin_20"
                android:src="@drawable/back" />
    </RelativeLayout>

         