<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                           
    <!--    xmlns:app="http://schemas.android.com/tools"-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray" android:tag="layout/layout_school_fees_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_gray"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/questrial"
                    android:padding="@dimen/margin_10"
                    android:text="@string/lbl_school_fees"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_40"
                android:orientation="vertical">

                <com.woleapp.ui.widgets.CustomEditText
                    android:id="@+id/etAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789."
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_amount"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="14"
                    android:nextFocusDown="@id/etEmail"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/etFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789."
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_amount"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/etEmail"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="&#x20A6; 100"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_white"
                    android:layout_marginTop="@dimen/dimen_10dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spnSchools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:prompt="@string/hint_choose_school"
                        android:spinnerMode="dropdown"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_white"
                android:layout_marginTop="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnIdType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:prompt="@string/hint_choose_id_type"
                    android:spinnerMode="dropdown"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />

            </LinearLayout>

                <EditText
                    android:id="@+id/etIDNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789"
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_id_no"
                    android:inputType="number"
                    android:maxLength="20"
                    android:nextFocusDown="@id/etPrice"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15">

                        <TextView
                            android:id="@+id/tvSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/margin_5"
                            android:fontFamily="@font/questrial"
                            android:text="@string/lbl_signature"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_14sp" />


                        <TextView
                            android:id="@+id/tvRetake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:drawableLeft="@drawable/reset"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/questrial"
                            android:text="RETAKE"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearCanvas"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@drawable/bg_rounded_white"
                        android:orientation="horizontal">

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_theme"
                        android:fontFamily="@font/questrial"
                        android:minHeight="@dimen/margin_40"
                        android:text="PROCEED TO MAKE PAYMENT"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
         