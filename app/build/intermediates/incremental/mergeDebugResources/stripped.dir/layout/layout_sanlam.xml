                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_15sp" />
                    <EditText
                        android:id="@+id/ben_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_rounded"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz- "
                        android:fontFamily="@font/questrial"
                        android:inputType="text"
                        android:nextFocusDown="@id/ben_contactNumber"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/questrial"
                        android:text="Contact Number"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_15sp" />
                    <EditText
                        android:id="@+id/ben_contactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_rounded"
                        android:digits="0123456789"
                        android:fontFamily="@font/questrial"
                        android:inputType="phone"
                        android:nextFocusDown="@id/ghanaCard"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_size_14sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/btn_previousPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/questrial"
                            android:minHeight="@dimen/margin_40"
                            android:minWidth="@dimen/margin_100"
                            android:layout_marginTop="@dimen/margin_20"
                            android:layout_marginRight="@dimen/margin_40"
                            android:text="PREVIOUS"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_15sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/questrial"
                            android:minHeight="@dimen/margin_40"
                            android:minWidth="@dimen/margin_100"
                            android:layout_marginTop="@dimen/margin_20"
                            android:text="SUBMIT"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_15sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>
                </LinearLayout>
           </RelativeLayout>

   </ScrollView>
         