<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                          
                                                   
    <!--    xmlns:app="http://schemas.android.com/tools"-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="719dp"
        android:background="@color/bg_gray" android:tag="layout/layout_fund_wallet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/questrial"
                    android:padding="@dimen/margin_10"
                    android:text="@string/lbl_fund_fallet"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginRight="@dimen/margin_40"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789."
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_amount"
                    android:inputType="numberDecimal"
                    android:maxLength="14"
                    android:nextFocusDown="@id/etEmail"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />


                <EditText
                    android:id="@+id/etFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789."
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_amount"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/etEmail"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="&#x20A6; 100"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvConvinienceFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/questrial"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="@string/lbl_convinience_fee"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/bg_rounded_white">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spnIdType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:prompt="@string/hint_choose_id_type"
                        android:spinnerMode="dropdown"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etIDNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="0123456789"
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_id_no"
                    android:inputType="number"
                    android:maxLength="20"
                    android:nextFocusDown="@id/etPrice"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/bg_rounded_white"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHJIKLMNOPQRSTUVWXYZ "
                    android:enabled="true"
                    android:fontFamily="@font/questrial"
                    android:hint="@string/hint_customer_name"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="40"
                    android:nextFocusDown="@id/etAccountNo"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="right"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:background="@drawable/ripple_theme"
                        android:fontFamily="@font/questrial"
                        android:minHeight="@dimen/margin_40"
                        android:minEms="7"
                        android:text="PROCEED"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />
                    <!--android:text="@string/lbl_pay"-->

                </LinearLayout>
                <!--            <com.llollox.androidtoggleswitch.widgets.ToggleSwitch-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:gravity="center"-->
                <!--                    app:textToggleLeft="Apple"-->
                <!--                    app:textToggleRight="Lemon" />-->


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
         