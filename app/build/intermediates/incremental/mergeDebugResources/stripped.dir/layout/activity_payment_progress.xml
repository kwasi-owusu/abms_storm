<?xml version="1.0" encoding="utf-8"?>


                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_payment_progress_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
        <!--tools:context="com.netplus.netposdemo.activities.PaymentProgressActivity"-->
        <TextView
            android:id="@+id/amount_tv"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/muli"
            android:gravity="center"
            tools:text="Amount: 3000N" />

        <TextView
            android:id="@+id/tvConvenienceFee"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_tv"
            android:layout_margin="2dp"
            android:fontFamily="@font/muli"
            android:gravity="center"
            android:visibility="gone"
            tools:text="Convenience Fee Included: 100N" />

        <TextView
            android:id="@+id/progress_tv"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:fontFamily="@font/muli"
            android:gravity="center"
            tools:text="" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16sp"
            tools:text="Error" />

        <Button
            android:id="@+id/receipt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/close_btn"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="110dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli"
            android:text="Receipt"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_50"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli"
            android:text="Back To Home"
            android:textColor="@android:color/white" />

    </RelativeLayout>
         