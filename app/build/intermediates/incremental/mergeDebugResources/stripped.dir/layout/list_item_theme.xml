                <!--android:id="@+id/ivColor"-->
                <!--android:layout_width="35dp"-->
                <!--android:layout_height="35dp"-->

                <!--android:src="@color/green"-->
                <!--/>-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

