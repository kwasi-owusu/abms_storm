<?xml version="1.0" encoding="utf-8"?>

                                                                                                            
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite" android:tag="layout/layout_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:src="@drawable/pp">

<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
                <requestFocus />
            </ImageView>

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/lbl_sign_in"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/questrial"
                    android:textSize="21sp" />

            <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginBottom="10dp"-->

                <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="3dp"
                        android:elevation="3dp"
                        android:id="@+id/signUpButton"
                        android:layout_width="0dp"
                        android:layout_weight="0.50"
                        android:layout_marginRight="0.8dp"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        >

                    <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:text="@string/lbl_agent"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/questrial"
                            android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/text_color_gray_dark"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="8dp"
                        android:elevation="8dp"
                        android:id="@+id/btnMerchant"
                        android:layout_width="0dp"
                        android:layout_weight="0.50"
                        android:layout_marginLeft="0.8dp"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                >

                    <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:text="@string/lbl_merchant"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/questrial"
                            android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <Button

                        android:visibility="gone"
                        android:elevation="5dp"
                        android:id="@+id/btnAgent1"
                        android:layout_width="0dp"
                        android:layout_weight="0.50"
                        android:layout_marginRight="0.8dp"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:background="@color/red"
                        android:textAllCaps="true"
                        android:text="@string/lbl_agent"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/questrial"
                        android:textStyle="bold" />

                <Button
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/btnMerchant1"
                        android:elevation="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.50"
                        android:layout_marginLeft="0.8dp"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:background="@drawable/ripple_gray2"
                        android:textAllCaps="true"
                        android:text="@string/lbl_merchant"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/questrial"
                        android:textStyle="bold" />
            </LinearLayout>>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputUname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBlack"
                android:theme="@style/InputLayout">
<!--                android:textColorHint="@color/text_color_gray_dark"-->

                <EditText
                    android:id="@+id/etEmail"
                    android:background="@drawable/edittext_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/drawable_mail"
                    android:drawablePadding="8dp"
                    android:hint="@string/hint_enter_email"
                    android:digits="abcdefghijklmnopqrstuvwxyz0123456789._@"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@id/etPwd"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/lightGray"
                    android:textSize="15sp"
                    android:fontFamily="@font/questrial"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@android:color/black"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/colorBlack"
                android:theme="@style/InputLayout">

                <EditText
                    android:id="@+id/etPwd"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@drawable/drawable_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:hint="@string/hint_enter_password"
                    android:inputType="text"
                    android:fontFamily="@font/questrial"
                    android:nextFocusDown="@id/btn_login"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    />
<!--                com.google.android.material.textfield.TextInputEditText-->
<!--                android:inputType="textPassword"-->

                <!--<com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_user_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_pwd"
                    android:hint="   Password"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/btn_login"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:fontFamily="@font/muli_light"
                    android:textSize="20sp" />-->

                <!--<EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_user_pwd"
                    android:drawableLeft="@drawable/ic_pwd"
                    android:hint="   Password"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/btn_login"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="20sp" />-->
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_forgot_pwd"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:text="FORGOT PASSWORD?"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/questrial"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:minHeight="@dimen/margin_40"
                android:background="@color/red"
                android:imeOptions="actionDone"
                android:textAllCaps="true"
                android:text="@string/lbl_login"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/questrial"
                android:textStyle="bold" />

            <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">
                <TextView
                        android:id="@+id/tvNoAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/lbl_no_account"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/questrial"
                        android:textSize="13sp" />
                <!--android:layout_toLeftOf="@id/tvSignUp"-->
                <TextView
                        android:id="@+id/tvSignUp"
                        android:layout_below="@id/tvNoAccount"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/lbl_sign_up"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:fontFamily="@font/questrial"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"
                        />
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentTop="true"-->
<!--                selectableItemBackground-->
<!--                selectableItemBackgroundBorderless-->
            </RelativeLayout>


<!--            android:background="@color/colorPrimary"-->
        </LinearLayout>

    </LinearLayout>
</ScrollView>

         