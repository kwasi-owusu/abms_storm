    <!--android:background="@color/semi_transparent_gray"-->

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.MainActivity"
        android:gravity="center"
        android:clickable="true" android:tag="layout/dialog_reset_password_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/tools">
        <!--android:gravity="center"-->
    <!--<LinearLayout-->
        <!--android:id="@+id/linearParent"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/black_trans">-->
        <!--android:background="@color/black_trans"-->
        <!--android:layout_marginTop="?attr/actionBarSize"-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        custom:cardCornerRadius="20dp">

        <!--android:layout_marginBottom="5dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginTop="5dp"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10">


            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10">
                <TextView
                    android:id="@+id/tvTitle"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Reset Password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/margin_10"
                    android:fontFamily="@font/muli"/>

                <ImageView
                    android:id="@+id/ivClose"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/vector_cross_new"/>
            </RelativeLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputNotes"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color_gray_dark"
                android:theme="@style/InputLayout">
                <!--                android:textColorHint="@color/text_color_gray_dark"-->

                <EditText
                    android:id="@+id/etEmail"
                    android:background="@drawable/bg_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:hint="Enter your registered E-mail with Storm"
                    android:inputType="textEmailAddress"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyz_.@"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/text_color_gray_dark"
                    android:textSize="@dimen/text_size_16sp"
                    android:fontFamily="@font/muli"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:textAllCaps="false"
                android:background="@drawable/ripple_theme_no_radius"
                android:minHeight="35dp"
                android:text="Reset"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_13sp"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/muli"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
         