            </LinearLayout>


            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ripple_theme"
                android:imeOptions="actionDone"
                android:textAllCaps="true"
                android:text="@string/lbl_sign_up"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/questrial"
                android:textStyle="bold" />

            <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">
                <TextView
                        android:id="@+id/tvNoAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_toLeftOf="@id/tvSignUp"
                        android:text="@string/lbl_have_an_account"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/questrial"
                        android:textSize="13sp" />
                <TextView
                        android:id="@+id/tvSignUp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/lbl_sign_in"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/questrial"
                        android:textSize="13sp" android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>

<!--                selectableItemBackground-->
